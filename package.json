{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "description": "A template repository for an ExpressJS Server written in Typescript. No bloat or assumptions.",
  "main": "dist/server.js",
  "scripts": {
    "build": "npx tsc -p .",
    "start:prod": "node .",
    "start": "npx nodemon src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json,css,md,html}'"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md,html}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/node-cache": "^4.1.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "globals": "^15.13.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "prettier-plugin-pug": "^1.0.0-alpha.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "dependencies": {
    "express": "^4.21.1",
    "http-terminator": "^3.2.0",
    "node-cache": "^5.1.2"
  }
}
